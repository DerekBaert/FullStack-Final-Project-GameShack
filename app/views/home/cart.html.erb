<h1 class="title is-2">Your Cart</h1>

<%if @cart.empty?%>
    <p>Cart is empty.</p>
<%else%>
    <table class="table is-fullwidth is-bordered text-is-centered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <%@cart.each do |product|%>
                <tr>
                    <td><%= image_tag(product.image, width: '100')%></td>
                    <td class="has-text-justified has-text-centered"><%= link_to product.name.truncate(50), product %></td>
                    <td class="has-text-justified has-text-centered"><%=product.price%></td>
                    <td class="has-text-justified has-text-centered">
                        <input id=<%=product.id%>% class="quantity" type="number" name="quantity" min="1" max="10" value="1">
                    </td>
                    <td></td>
                    <%if(product.is_a? Game)%>
                        <td><%=button_to "Remove",remove_game_from_cart_path(product.id), method: :delete, class: "button is-small is-danger"%></td>
                    <%else%>
                        <td><%=button_to "Remove",remove_platform_from_cart_path(product.id), method: :delete, class: "button is-small is-danger"%></td>
                    <%end%>
                </tr>
            <%end%>
        </tbody>
    </table>
<%end%>