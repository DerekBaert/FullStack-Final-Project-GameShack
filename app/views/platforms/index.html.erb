<p style="color: green"><%= notice %></p>
<%= debug @filter %>
<%= form_with(url: '/platforms', method: 'get', local: true) do %>
  <select name="filter" id="filter">
    <option value="All">All</option>
    <option value="Sale">On Sale</option>
    <option value="Recent">Recently Added</option>
  <%= submit_tag("Filter") %>
<% end %>

<h1 class="title is-2">Platforms</h1>
<%= paginate @platforms %>
<div class="columns is-multiline">
  <% @platforms.each do |p| %>
    <%= render partial: "platform", object: p %>
  <% end %>
</div>

