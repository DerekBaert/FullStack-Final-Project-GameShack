<div class="column">
    <div class="card has-text-centered">
        <% if platform.image.present? %>
            <div class="card-image has-text-centered">
                <%= image_tag(platform.image, width: '200', alt: "#{platform.name} logo")%>
            </div>
        <% end %> 
        <div class="card-content">
            <p class="subtitle is-6 is-centered">
                <%= link_to platform.name, platform %>
            </p>                           
            <%if(platform.sale)%>
                    <p class="subtitle is-6 is-centered" >
                    <s style="color:red;"><%= number_to_currency(platform.price)%></s> | 
                    <span style="color:green;"><%=number_to_currency(platform.price - (platform.price * platform.sale))%></span>      
                    </p>              
                <%else%>
                    <p class="subtitle is-6 is-centered" style="color:green;"><%= number_to_currency(platform.price) %></p>     
                <%end%>
            <footer class="card-footer is-centered">                                
                <div class="card-footer-item">  
                    <%=button_to "Add to cart", add_platform_to_cart_path(platform.id), class: 'button is-primary'%>
                </div>   
            </footer>
        </div>
    </div>
</div>