<div class="column">
    <div class="card">
        <div class="card-content">
                <p class="card-header-title is-centered">
                    <%= link_to game.name, game %>
                </p>        
            <% if game.image.present? %>
                <div class="card-image is-centered">
                    <%= image_tag(game.image, :size => '200x200')%>
                </div>
            <% end %>        
            <footer class="card-footer">
                <% if game.age_rating.present? %>
                    <%= game.age_rating %>
                <% end %> 
                <br>
                $<%= game.price %>
            </footer>
        </div>
    </div>
</div>